<!DOCTYPE html>
<html>
<head>
    <title>ASP.NET Web API</title>
    <script src="~/lib/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript">
        function find() {
            var id = $('#prodId').val();
            $.getJSON("https://localhost:44399/api/Person/" + id,
                function (data) {
                    var str = val.personId + '/' + val.firstName + '/' + val.lastName + '/' + val.email;
                    $('#Person').html(str);
                })
                .fail(
                    function (jqXHR, textStatus, err) {
                        $('#Person').html('Error: ' + err);
                    });
        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Send an AJAX request
            $.getJSON("https://localhost:44399/api/Person",
                function (data) {
                    // On success, 'data' contains a list of products.
                    $.each(data, function (key, val) {

                        // Format the text to display.
                        var str = val.personId + '/' + val.firstName + '/' + val.lastName + '/' + val.email;

                        // Add a list item for the product.
                        $('<li/>', { html: str })
                            .appendTo($('#People'));
                    });
                });
        });
    </script>
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">ASP.Net WebAPI Client Test</h1>
    </div>
    <div>
        <h1>All Person</h1>
        <ul id='People' />
    </div>
    <div>
        <label for="prodId">ID:</label>
        <input type="text" id="prodId" size="5" />
        <input type="button" value="Search" onclick="find();" />
        <p id="Person" />
    </div>
</body>
</html>
